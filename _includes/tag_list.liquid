<div>
  <h4>Tags ({{ site.tags.size }})</h4>
  <ul class="list-inside list-disc">
    {% for tag in site.tags %}
    {% assign tag_id = tag[0] %}
    {% assign matching_tag = site.data.tags[tag_id] %}
    {% assign tag_name = matching_tag["name"] | default:tag_id %}
    <li>
      <a
        href="{{ site.baseurl }}/tags/{{ tag[0] }}"
        >{{ tag_name }} ({{ tag[1].size }})</a
      >
    </li>
    {% endfor %}
  </ul>
</div>

